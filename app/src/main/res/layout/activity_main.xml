                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10.000"
                                    android:textAlignment="textEnd"
                                    android:textColor="#DC0F0F" />

                                <TextView
                                    android:id="@+id/textView3.2"
